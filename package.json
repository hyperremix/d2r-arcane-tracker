{
  "name": "@hyperremix/d2r-arcane-tracker",
  "private": true,
  "version": "0.3.0",
  "description": "Automatic tracker for everything D2R related",
  "author": "hyperremix",
  "license": "MIT",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "electron-rebuild --force --module-dir . --which-module better-sqlite3 && vite",
    "preview": "electron-vite preview",
    "build": "npm run typecheck && vite build && electron-builder",
    "build:win": "npm run typecheck && vite build && electron-builder --win",
    "build:mac": "npm run typecheck && vite build && electron-builder --mac",
    "build:linux": "npm run typecheck && vite build && electron-builder --linux",
    "typecheck": "concurrently \"tsc -p tsconfig.json --noEmit\" \"tsc -p tsconfig.node.json --noEmit\"",
    "typecheck:web": "tsc -p tsconfig.json --noEmit",
    "typecheck:node": "tsc -p tsconfig.node.json --noEmit",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky",
    "seed:test": "node scripts/setup-native-modules.js && tsx scripts/seed-test-data.ts",
    "version:major": "yarn version --new-version major && git push --follow-tags",
    "version:minor": "yarn version --new-version minor && git push --follow-tags",
    "version:patch": "yarn version --new-version patch && git push --follow-tags"
  },
  "dependencies": {
    "@dschu012/d2s": "^2.0.36",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/react-virtual": "^3.13.12",
    "better-sqlite3": "^12.4.1",
    "chokidar": "^4.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-updater": "^6.6.2",
    "i18next": "^25.4.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-resources-to-backend": "^1.2.1",
    "lucide-react": "^0.542.0",
    "motion": "^12.23.24",
    "next-themes": "^0.4.6",
    "platform-folders": "^0.6.1",
    "pngjs": "^7.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^15.7.3",
    "react-router": "^7.9.2",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@tailwindcss/vite": "^4.1.12",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.5.2",
    "@types/pngjs": "^6.0.5",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.2.1",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^15.2.10",
    "tailwindcss": "^4.1.12",
    "tsx": "^4.20.5",
    "tw-animate-css": "^1.3.7",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "biome check --write",
      "biome lint --write",
      "biome format --write"
    ],
    "electron/**/*.ts": [
      "biome check --write",
      "biome lint --write",
      "biome format --write"
    ],
    "*.{css,json,js,jsx}": [
      "biome check --write",
      "biome lint --write",
      "biome format --write"
    ]
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
